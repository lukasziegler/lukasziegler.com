.panel-list
  list-style none
  font-size 18px
  font-weight 200
  margin 32px 0

  &--left-aligned_desktop
    +at('desktop')
      text-align left
      padding-left 40px
      
  &__item
    margin 24px 0

  &--numbered
    list-style auto
    margin 20px 40px
    
    & > li
      padding 8px 0

  &--unnumbered
    list-style square
    text-align left
    font-size 18px
    margin-left 40px
    
    & > li
      padding 8px 0

  &--centered
    text-align center
    font-size 20px