// Basics
@require "rupture"
rupture.scale = 0 40rem 64rem
rupture.scale-names = '' 'mobile' 'tablet' 'desktop'

// General mixins
content-container()
  max-width 1200px
  margin 0 auto
  padding 0 15px

// Legacy code
body
  font-family "museo-sans", sans-serif
  font-weight 300
  overflow-y scroll
  -webkit-overflow-scrolling touch

p
  font-weight 300

.full-width
  width: 100%
  margin-left: auto
  margin-right: auto
  max-width: initial

.row-container
  margin: 0 auto
  max-width: 1000px

a,
a:visited,
a:hover,
a:focus,
a:active
  color: #27272b
  text-decoration: none
  font-weight: 700

h2
  font-size: 2.0em
  font-weight: 300
  color: #fff
  text-shadow: rgba(0, 0, 0, 0.3) 0px 1px 2px
  position: absolute
  top: -1.5em
  z-index: 100

h2 a,
h2 a:hover,
h2 a:visited,
h2 a:active,
h2 a:link
  color: #fff !important

h3
  font-family: "Helvetica Neue", Helvetica, Roboto, Arial, sans-serif
  font-weight: 300
  font-size: 2.5em

h4
  color: dimgrey
  font-weight: 200
  font-size: 1.5em

.row-bright
  background-color: #f1f7f7
  padding 25px 20px
  +above('tablet')
    padding 4em 0 3em 0

.row-dark
  background-color: #160c00
  padding: 2em 0 1em 0
  color: #fff

.row-caption
  background-color: #f1f7f7
  padding: 4.7em 0 3.5em 0
  text-align: center

.row-inverse
  background-color: #1c1c1c
  padding: 4.7em 0 3.5em 0
  color: #fff
  text-align: center

.row-inverse p
  font-size: 1.5em
  font-weight: 200

.row-bg
  background-size: cover

.row-teaser
  padding 0 20px

.row-teaser p
  margin: 0.5em 0 0.8em 0
  text-align: center
  font-size: 2.3em
  font-weight: 100

// Module imports
@require "header"
@require "footer"