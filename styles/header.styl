.header
  background-position: center
  background-size: cover
  background-color: #dfb95d
  background-image: url(../img/header-tofino@desktop.jpg)
  width: 100%
  height: 75vh
  min-height: 550px
  position: relative
  margin: 0
  padding: 0
  overflow: hidden
    
  &:before
    content: ""
    color: #ff0000
    display: block
    position: absolute
    width: 100%
    height: 100%
    bottom: 0px
    background: url(../img/header-fade.png) repeat-x bottom
    opacity: 0.6

  &__content
    content-container()

  &__title a
    text-decoration: none
    color: #fff
    font-weight: 100

  &__slogan
    top: 0
    position: relative
    color: #fff
    text-align: center
    text-transform: uppercase
    font-weight: 500
    border: 7px solid #fff
    width: 95%
    padding: 0 15px
    max-width 1000px
    font-size: 2.5em
    margin: 25vh auto
    +above('mobile')
      font-size: 3.7em
      margin: 20vh auto
    +above('tablet')
      font-size: 4rem
      margin: 25vh auto
